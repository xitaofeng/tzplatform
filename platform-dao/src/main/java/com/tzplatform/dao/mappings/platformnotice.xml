        </if>
        <if test="null !=updatetime">
            AND updatetime=#{updatetime}
        </if>
        <if test="null !=createuser and ''!=createuser">
            AND createuser=#{createuser}
        </if>
        <if test="null !=noticetype and ''!=noticetype">
            AND noticetype=#{noticetype}
